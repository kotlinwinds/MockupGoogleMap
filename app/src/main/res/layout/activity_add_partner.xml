<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:animateLayoutChanges="true"
                                             xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">



        <ScrollView
                android:scrollbars="none"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true"
                android:id="@+id/sv_container">


            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/_1sdp"
                    android:paddingEnd="@dimen/_1sdp"
                    android:paddingBottom="@dimen/_2sdp">




                <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_16sdp"
                        android:layout_marginTop="@dimen/_16sdp"
                        android:layout_marginRight="@dimen/_16sdp"
                        android:background="#FFF"
                        app:cardCornerRadius="@dimen/_4sdp"
                        app:cardElevation="@dimen/_2sdp">

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:orientation="vertical">


                        <Button
                                android:onClick="btn_view"
                                android:layout_marginTop="@dimen/_20sdp"
                                android:id="@+id/btn_view"
                                android:layout_marginEnd="@dimen/_17sdp"
                                android:layout_marginStart="@dimen/_17sdp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="View"
                                android:background="@color/colorPrimaryDark"
                                android:textAllCaps="true"
                                android:textColor="#FFF"
                                android:textSize="14sp"
                                android:visibility="visible" />


                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_24sdp"
                                android:orientation="vertical">

                            <TextView
                                    android:layout_marginStart="@dimen/_5sdp"
                                    android:textColor="@color/colorAccent"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Category" />

                            <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal">

                                <Spinner
                                        android:id="@+id/category_partner"
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/_20sdp"
                                />

                            </LinearLayout>

                            <View
                                    android:layout_marginStart="@dimen/_5sdp"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_1sdp"
                                    android:layout_centerInParent="true"
                                    android:background="@color/colorAccent" />
                        </LinearLayout>



                        <LinearLayout
                                android:layout_marginStart="@dimen/_5sdp"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                            <android.support.design.widget.TextInputLayout
                                    android:id="@+id/il_company_name"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_20sdp"
                                    android:hint="Establishment Name">

                                <android.support.design.widget.TextInputEditText
                                        android:id="@+id/edt_establish_name"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:imeOptions="actionNext"
                                        android:inputType="text"
                                        android:maxLines="1"
                                        android:textSize="14sp"
                                        tools:text="establishment_name"
                                />

                            </android.support.design.widget.TextInputLayout>

                            <android.support.design.widget.TextInputLayout
                                    android:id="@+id/il__owner_name"
                                    android:layout_marginBottom="@dimen/_20sdp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_10sdp"
                                    android:hint="Owner Names">

                                <android.support.design.widget.TextInputEditText
                                        android:id="@+id/edt_owner_name"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:imeOptions="actionNext"
                                        android:inputType="text"
                                        android:maxLines="1"
                                        android:textSize="14sp"
                                        tools:text="Owner Name"
                                />
                            </android.support.design.widget.TextInputLayout>


                        </LinearLayout>




                    </LinearLayout>


                </android.support.v7.widget.CardView>



                <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_16sdp"
                        android:layout_marginTop="@dimen/_16sdp"
                        android:layout_marginRight="@dimen/_16sdp"
                        android:background="#FFF"
                        app:cardCornerRadius="@dimen/_4sdp"
                        app:cardElevation="@dimen/_2sdp">

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:orientation="vertical">

                        <android.support.design.widget.TextInputLayout
                                android:id="@+id/il_address"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:hint="Address">

                            <android.support.design.widget.TextInputEditText
                                    android:id="@+id/edt_address"
                                    android:paddingStart="@dimen/_5sdp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="top|left"
                                    android:imeOptions="actionNext"
                                    android:inputType="textMultiLine|textNoSuggestions"
                                    android:maxLines="10"
                                    android:minLines="3"
                                    android:textSize="14sp"
                                    tools:text="address*" />

                        </android.support.design.widget.TextInputLayout>

                        <RelativeLayout
                                android:layout_margin="@dimen/_10sdp"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_150sdp">

                            <FrameLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                <fragment
                                        android:tag="fragment_map"
                                        android:id="@+id/map"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        class="co.winds.common.WorkaroundMapFragment"/>


                            </FrameLayout>

                            <ImageView
                                    android:id="@+id/imageMarker"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentTop="true"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="45dp"
                                    android:src="@drawable/ic_pin_pickup" />

                        </RelativeLayout>


                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <Button
                        android:onClick="btn_save"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:id="@+id/btn_save"
                        android:layout_marginEnd="@dimen/_17sdp"
                        android:layout_marginStart="@dimen/_17sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="save"
                        android:background="@color/colorPrimaryDark"
                        android:textAllCaps="true"
                        android:textColor="#FFF"
                        android:layout_marginBottom="@dimen/_30sdp"
                        android:textSize="14sp"
                        android:visibility="visible" />
            </LinearLayout>
        </ScrollView>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>